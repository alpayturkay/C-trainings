
#include<stdio.h>

int main()
{
    int hours;
    int salary,lowsalary,highsalary;

    printf("Please enter the hours that you have worked in this week.");
    scanf("%d",&hours);


    if (hours<=40)
      {

        lowsalary=8*hours;
        printf("%d is your salary.",lowsalary);
      }
    else
    {
    highsalary=320+(hours-40)*12;
    printf("%d is your salary.",highsalary);
    }
    return 0;

}
